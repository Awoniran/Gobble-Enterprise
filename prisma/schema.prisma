generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String //required
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique //required
  role      Role      @default(USER)
  active    Boolean   @default(true)
  image     String?
  address   String?
  phoneNo   String?
  reviews   Reviews[]
  orders    Orders[]
  cart      cart[]

}

enum Role {
  ADMIN
  USER
}

model Product {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String    @unique
  description   String
  slug          String
  price         Int
  image         String
  category      String
  averageReview Float
  Reviews       Reviews[]
}

model Reviews {
  id        Int      @id @default(autoincrement())
  review    String?
  date      DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?

}

model cart {

  id      Int      @id @default(autoincrement())
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  product String[]
  ordered Boolean?

}

model Orders {
  id        Int      @id @default(autoincrement())
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  product   String[]
  delivered Boolean
  orderedAt DateTime @default(now())

}
